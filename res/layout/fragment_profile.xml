<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.mobicom.lifeplus.ProfileFragment" >

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/image_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_level"
        android:layout_below="@+id/tv_level"
        android:text="Health" />

    <TextView
        android:id="@+id/tv_health_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_health"
        android:layout_alignBottom="@+id/tv_health"
        android:layout_toRightOf="@+id/tv_health"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:text="100.00%" />

    <TextView
        android:id="@+id/tv_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_health"
        android:layout_below="@+id/tv_health"
        android:text="EXP" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_health_value"
        android:layout_toRightOf="@+id/tv_exp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:text="00.00%" />

    <TextView
        android:id="@+id/tv_credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_exp"
        android:layout_below="@+id/tv_exp"
        android:layout_marginTop="25dp"
        android:text="Credits" />

    <TextView
        android:id="@+id/tv_credits_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_credits"
        android:layout_alignBottom="@+id/tv_credits"
        android:layout_toRightOf="@+id/tv_credits"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:text="1000" />

    <TextView
        android:id="@+id/tv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/image_profile"
        android:layout_below="@+id/image_profile"
        android:text="Level 01"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>
